<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreen"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:orientation="horizontal"
        >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/male_icon"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHSAN SHAH"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:id="@+id/name_profile_id"

            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/monotype_madera_light"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_marginStart="40dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/orange"

            android:text="EMAIL:"
            android:fontFamily="@font/monotype_madera_light"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/orange"
                android:id="@+id/email_profile_id"
                android:text="ahsanshah@giki.edu.pk"
                android:fontFamily="@font/monotype_madera_light"
                android:layout_marginStart="25dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="PHONE:"
                android:textColor="@color/orange"
                android:fontFamily="@font/monotype_madera_light"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_profile_id"

                android:textSize="20sp"
                android:text="03213636939"
                android:textColor="@color/orange"

                android:fontFamily="@font/monotype_madera_light"
                android:layout_marginStart="05dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/orange"

                android:text="CNIC:"
                android:fontFamily="@font/monotype_madera_light"
                />
            <TextView
                android:id="@+id/cnic_profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="611019113189"
                android:fontFamily="@font/monotype_madera_light"
                android:textColor="@color/orange"

                android:layout_marginStart="40dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/sign_out_btn"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="SIGN OUT"
                android:fontFamily="@font/monotype_madera_bold"
                android:textColor="@color/black"
                android:textSize="40dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/homeLayout"
            android:background="@drawable/border"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"

            >


            <ImageView
                android:id="@+id/homeImage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/home_icon"

                />
            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textStyle="bold"
                android:fontFamily="@font/monotype_madera_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activityLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/border"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/activityImage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bookings_icon"
                />
            <TextView
                android:id="@+id/activityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_text"
                android:textStyle="bold"
                android:fontFamily="@font/monotype_madera_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/profileLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/border"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/outline_person_24"
                />
            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textStyle="bold"
                android:fontFamily="@font/monotype_madera_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>